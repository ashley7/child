<div class = "row">
  <div class = "col-md-3 col-xs-3 col-sm-3 col-lg-3">
  </div>
    <div class = "col-md-6 col-xs-6 col-sm-6 col-lg-6">
      <div class = "alert alert-info">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class = "field">
    <%= f.label :first_name%>
    <%= f.text_field :first_name, class: "form-control input-block", autofocus: true %>
  </div>
  <div class = "field">
    <%= f.label :Last_name%>
    <%= f.text_field :Last_name, class: "form-control input-block"%>
  </div>
  <div class = "field">
    <%= f.label :username%>
    <%= f.text_field :username, class: "form-control input-block"%>

  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control input-block" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control input-block"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,class: "form-control input-block"%>
  </div>
  <br/>

  <div class="actions">
    <%= f.submit "Sign up", class:  "btn btn-success btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
  <div class = "col-md-3 col-xs-3 col-sm-3 col-lg-3">
  </div>
</div>